<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="StandardWinUI.Views.InformationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StandardWinUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="textBlock" Grid.Row="0" TextWrapping="WrapWholeWords" Margin="12"/>

        <NavigationView x:Name="navigationView" Grid.Row="1" PaneDisplayMode="Left" OpenPaneLength="120" IsSettingsVisible="False" IsBackButtonVisible="Collapsed" IsPaneToggleButtonVisible="False" FontSize="9">
            <TextBox IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </NavigationView>
        
    </Grid>
</Page>
